<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF7F25">
    <View
        android:id="@+id/share_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/share_bk"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="41.5dp">

        <View
            android:id="@+id/share_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="邀请好友"
            android:textColor="@android:color/white"
            android:textSize="15.5sp" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="75dp"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/share_bk">
        <View
            android:id="@+id/share_wechat"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@mipmap/share_wechat"/>
        <View
            android:id="@+id/share_gr"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@mipmap/share_gr"
            android:layout_marginLeft="28dp"/>
        <View
            android:id="@+id/share_qq"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@mipmap/share_qq"
            android:layout_marginLeft="28dp"/>
        <View
            android:id="@+id/share_sina"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@mipmap/share_sina"
            android:layout_marginLeft="28dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/share_ma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="221.5dp"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:text="您的邀请码是：00000000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="179dp"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:text="分享给好友"/>
</FrameLayout>
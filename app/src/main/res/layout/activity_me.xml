<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="151dp"
        android:background="@drawable/me_head"
        android:padding="10dp">

        <View
            android:id="@+id/me_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="个人中心"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <View
            android:id="@+id/me_setting"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:background="@mipmap/me_setting" />

        <com.facebook.drawee.view.SimpleDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
            android:id="@+id/me_avatar"
            android:layout_width="59dp"
            android:layout_height="59dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="29.5dp"
            fresco:actualImageScaleType="focusCrop"
            fresco:placeholderImage="@mipmap/logo"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:roundAsCircle="true"
            fresco:roundingBorderWidth="1dp"
            fresco:roundingBorderColor="@android:color/white"/>

        <TextView
            android:id="@+id/me_alias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="103dp"
            android:layout_marginTop="-10dp"
            android:maxLines="1"
            android:text="alias"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/me_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="103dp"
            android:layout_marginTop="10dp"
            android:text="point"
            android:textColor="@android:color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/me_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="103dp"
            android:text="online"
            android:textColor="@android:color/white"
            android:textSize="13sp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/me_record"
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="27dp"
            android:background="@mipmap/me_record" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="57dp"
            android:text="消费记录"
            android:textColor="#484747" />

        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="38dp"
            android:background="@mipmap/go" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="55dp"
            android:background="#eaeaea" />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/me_money"
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="27dp"
            android:background="@mipmap/me_money" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="57dp"
            android:text="我的钱包"
            android:textColor="#484747" />

        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="38dp"
            android:background="@mipmap/go" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="55dp"
            android:background="#eaeaea" />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/me_friend"
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="27dp"
            android:background="@mipmap/me_friend" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="57dp"
            android:text="邀请好友"
            android:textColor="#484747" />

        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="38dp"
            android:background="@mipmap/go" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="55dp"
            android:background="#eaeaea" />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/me_exchange"
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="27dp"
            android:background="@mipmap/me_record" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="57dp"
            android:text="优惠兑换"
            android:textColor="#484747" />

        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="38dp"
            android:background="@mipmap/go" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="55dp"
            android:background="#eaeaea" />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/me_message"
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="27dp"
            android:background="@mipmap/me_message" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="57dp"
            android:text="我的消息"
            android:textColor="#484747" />

        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="38dp"
            android:background="@mipmap/go" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="55dp"
            android:background="#eaeaea" />
    </FrameLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:background="@drawable/item_msg_selector"
        android:orientation="vertical"
        android:paddingTop="14.5dp"
        android:paddingLeft="17.5dp"
        android:paddingRight="13.5dp"
        android:paddingBottom="20.5dp">
        <TextView
            android:id="@+id/item_msg_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="14sp"
            android:textColor="#484747"
            android:text="title"/>
        <TextView
            android:id="@+id/item_msg_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15.5dp"
            android:ellipsize="end"
            android:textSize="12sp"
            android:textColor="#999999"
            android:text="content"/>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#F24F30">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:scaleType="fitXY"
            android:src="@mipmap/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="未来骑士"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/home_serv"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:scaleType="fitXY"
            android:src="@mipmap/home_invalid" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/home_ww"
            android:layout_width="82dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="娃娃机"
                android:textColor="@color/home_selector_title"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:background="@drawable/home_selector_title_bar" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/home_car"
            android:layout_width="82dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="摇摇车"
                android:textColor="@color/home_selector_title"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:background="@drawable/home_selector_title_bar" />
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.baidu.mapapi.map.MapView
            android:id="@+id/home_map"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="162dp"
            android:layout_gravity="bottom"
            android:padding="15dp">

            <ImageView
                android:id="@+id/home_fresh"
                android:layout_width="61dp"
                android:layout_height="61dp"
                android:src="@mipmap/home_fresh" />

            <ImageView
                android:id="@+id/home_location"
                android:layout_width="61dp"
                android:layout_height="61dp"
                android:layout_gravity="right"
                android:src="@mipmap/home_location" />

            <ImageView
                android:id="@+id/home_me"
                android:layout_width="61dp"
                android:layout_height="61dp"
                android:layout_gravity="bottom"
                android:src="@mipmap/home_me" />

            <ImageView
                android:id="@+id/home_gift"
                android:layout_width="61dp"
                android:layout_height="61dp"
                android:layout_gravity="bottom|right"
                android:src="@mipmap/home_gift" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/home_scan"
            android:layout_width="130dp"
            android:layout_height="48dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="9dp"
            android:background="@drawable/home_selector_star"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:background="@mipmap/home_scan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="扫码启动"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>

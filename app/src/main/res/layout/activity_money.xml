<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="151dp"
        android:background="@drawable/me_head"
        android:padding="10dp">

        <View
            android:id="@+id/money_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="我的钱包"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的余额(元)"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="52dp"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/money_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="16dp"
            android:text="0.0"
            android:textColor="@android:color/white"
            android:textSize="35sp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/money_pay"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="充值"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="21.dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/money_pay"/>
    </FrameLayout>
    <ListView
        android:id="@+id/money_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:dividerHeight="14dp"
        android:divider="@android:color/transparent"
        android:padding="18dp"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none"/>
</LinearLayout>